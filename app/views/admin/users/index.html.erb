

<% if flash[:success] %>
  <div >
    <ul class = "alert alert-success ">
      <li> <%= flash[:success]%> </li>
    </ul>

  </div>
<%end%>

<div class="message"></div>

<a href="<%= new_admin_user_path%>" class="btn btn-info">create user</a>

<h3 >Danh sách User</h3>
<div class="list-user">
<table class="table table-hover table-bordered" >
  <tr style="background: pink">
    <th>STT</th>
    <th>Tên </th>
    <th>Địa chỉ</th>
    <th>Số điện thoại</th>
    <th>Email</th>
    <th>Chức năng</th>
  </tr>

  <% @users.each_with_index do |user,index| %>
  <tr class="box-user">
    <td><%= index+1%></td>
    <td><%= user.name %></td>
    <td><%= user.address %></td>
    <td><%= user.phone%></td>
    <td><%= user.email %></td>
    <td>
      <a href="<%= edit_admin_user_path(user) %>" class="btn btn-info">Sửa</a>
      <a data-target=" <%= user.id %>" class="btn btn-danger delete-user" data-confirm="Bạn chắc chắn muốn xóa?">Xóa</a>
    </td>
  </tr>
  <% end %>
</table>
<div class="pull-right "><%= will_paginate @users, :style => 'color:blue' %></div>
</div>
