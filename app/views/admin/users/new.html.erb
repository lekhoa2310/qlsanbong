
  <% if @user.errors.any? %>
  <div class="col-md-12 alert-danger alert">
  <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </div>
  <% end %>

<%= form_for @user, url: admin_users_path  do |f| %>
<h1 class="text-center" style="color:#B22222">Register</h1>

<div class="col-md-4 col-sm-offset-4">
  <div class="form-group">
    <label for="exampleInputName2">Họ tên</label>
    <%= f.text_field :name, class: "form-control", placeholder: "Họ tên" %>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail2">Địa chỉ</label>
    <%= f.text_field :address, class: "form-control", placeholder: "Địa chỉ" %>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail2">Số điện thoại</label>
    <%= f.text_field :phone, class: "form-control", placeholder: "Số điện thoại" %>
  </div>
  <div class="form-group">
    <label for="exampleInputName2">Email</label>
    <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail2">Password</label>
    <%= f.text_field :password, class: "form-control", placeholder: "Mật khẩu" %>
  </div>
  <div class="text-center">
    <button type="submit" name="button" class="btn btn-primary ">Thêm</button>
  </div>
  </div>


<% end %>
